    <script type="text/javascript">
        function validate() {
            var Amount = document.getElementById("inputAmount3").value;
            var regx = /^[1-9][0-9]+$/;
            var Name = document.getElementById("inputName").value;
            var regx1 = /^[a-zA-Z ]+[a-zA-Z]+$/;
            var email = document.getElementById("inputEmail3").value;
            var regx2 = /^([a-zA-z0-9\.-]+)@([a-z0-9\-]+).([a-z]{2,10})(.[a-z]{2,5})?$/;
            var mobile = document.getElementById("inputMobile").value;
            var regx3 = /^[6-9][0-9]{9}$/;
            var address = document.getElementById("inputAddress").value;
            var regx4 = /^[a-zA-Z0-9\s,'-]*$/;
            var address1 = document.getElementById("inputAddress2").value;
            var regx5 = /^[a-zA-Z0-9\s,'-]*$/;
            var city1 = document.getElementById("inputCity").value;
            var regx6 = /^[a-zA-Z]+$/;
            var zip1 = document.getElementById("inputZip").value;
            var regx7 = /^[1-9][0-9]{5}$/;


            if (regx.test(Amount) && regx1.test(Name) && regx2.test(email) && regx3.test(mobile) && regx4.test(address) && regx5.test(address1) && regx6.test(city1) && regx7.test(zip1)) {
                alert("Valid Details");

            } else {
                alert("Invalid Details");

            }
            if (regx.test(Amount) == false) {
                inputAmount3.style.border = "solid 2px red";

            } else {
                inputAmount3.style.border = "solid 2px green";
            }
            if (regx1.test(Name) == false) {
                inputName.style.border = "solid 2px red";

            } else {
                inputName.style.border = "solid 2px green";
            }
            if (regx2.test(email) == false) {
                inputEmail3.style.border = "solid 2px red";

            } else {
                inputEmail3.style.border = "solid 2px green";
            }
            if (regx3.test(mobile) == false) {
                inputMobile.style.border = "solid 2px red";

            } else {
                inputMobile.style.border = "solid 2px green";
            }
            if (regx4.test(address) == false) {
                inputAddress.style.border = "solid 2px red";

            } else {
                inputAddress.style.border = "solid 2px green";
            }
            if (regx5.test(address1) == false) {
                inputAddress2.style.border = "solid 2px red";

            } else {
                inputAddress2.style.border = "solid 2px green";
            }
            if (regx6.test(city1) == false) {
                inputCity.style.border = "solid 2px red";

            } else {
                inputCity.style.border = "solid 2px green";
            }
            if (regx7.test(zip) == false) {
                inputZip.style.border = "solid 2px red";

            } else {
                inputZip.style.border = "solid 2px green";
            }



        }
    </script>

